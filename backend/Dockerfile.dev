# Development Dockerfile for Backend
FROM node:22-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm install

# Install ts-node and typescript globally for better TypeScript support
RUN npm install -g ts-node typescript

# Copy source code (node_modules already exists from RUN npm install)
# Host node_modules will be overridden by anonymous volume in docker-compose
COPY . .

# Expose backend port
EXPOSE 5001

# Run development server with nodemon
CMD ["npm", "run", "dev"]

